<?xml version="1.0" encoding="utf-8"?>
<odoo>


<!-- Vista de Busqueda -->
	<record id="product_template_search_view2" model="ir.ui.view">
		<field name="name">product.template.search</field>
		<field name="model">product.template</field>
		<field name="arch" type="xml">
			<search>
				<field name = "default_code" />					
			</search>
		</field>
	</record>


<!-- Vista Lista -->
	<record id="product_template_tree_view2" model="ir.ui.view">
		<field name="name">product.template.tree</field>
		<field name="model">product.template</field>
		<field name="arch" type="xml">
			<tree create="0">
				<field name = "default_code" />
				<field name = "name_estructura_ids" />
				<field name = "descripcion_estructura_ids" />
				<field name = "materiales_ids" />
				<field name = "cantidad_products" />
			</tree>
		</field>
	</record>	



	<!-- Accion del formulario -->
	<record id="product_template_action2" model="ir.actions.act_window">
		<field name="name">CARGAR ESTRUCTURAS</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">product.template</field>
		<field name="view_mode">tree,form</field>
	</record>
	

	<!-- menu de acceso -->
	 <menuitem id="product_template_menu" name="Cargar estructuras" parent="merp_report_menu" action="product_template_action2" />

</odoo>