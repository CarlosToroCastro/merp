<?xml version="1.0" encoding="utf-8"?>
<odoo>


<!-- Vista de Busqueda -->
	<record id="ct_product_activo_2_search_view" model="ir.ui.view">
		<field name="name">ct.product_activo.search</field>
		<field name="model">ct.product_activo</field>
		<field name="arch" type="xml">
			<search>
				<field name="proyecto_id" />
				<field name="nodo_id" />
				<field name="activo_nodo_id" />
				<field name="product_id" />	
				<filter name= "filter_ejecucion" string= "ejecucion" domain="[('state', '=', 'ejecucion')]" />
				<group expand="0" string="Group By">
					<filter string="Proyecto" name="filter_proyecto" domain="[]" context="{'group_by':'proyecto_id'}"/>
					<filter string="Nodo" name="filter_nodo" domain="[]" context="{'group_by':'nodo_id'}"/>
				</group>					
			</search>
		</field>
	</record>


<!-- Vista Lista -->
	<record id="ct_product_2_activo_tree_view" model="ir.ui.view">
		<field name="name">ct.product_activo.tree</field>
		<field name="model">ct.product_activo</field>
		<field name="arch" type="xml">
				<tree create="0" >
					<field name="proyecto_id" optional="hide"/>
					<field name="nodo_id" optional="hide"/>
					<field name="activo_nodo_id" />
					<field name="product_id" />	
					<field name="cat_product" optional="hide" />
					<field name="tipo_product" optional="hide"/>
					<field name="estructura_ids" />
					<field name="distancia" optional="hide"/>
					<field name="can_lineas" optional="hide"/>
					<field name="cantidad" />
					<field name="state" invisible="1"/>	
				</tree>	
		</field>
	</record>	



	<!-- Accion del formulario -->
	<record id="ct_product_activo_2_action" model="ir.actions.act_window">
		<field name="name">METAS FÍSICAS</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">ct.product_activo</field>
		<field name="view_mode">tree,form</field>
	</record>
	

	<!-- menu de acceso -->
	 <menuitem id="ct_product_activo_2_menu" name="Metas físicas " parent="merp_report_menu" action="ct_product_activo_2_action" />

</odoo>