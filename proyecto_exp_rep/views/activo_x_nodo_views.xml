<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- Vista de Busqueda -->
	
	<record id="ct_nodo_activo_poste_search_view" model="ir.ui.view">
		<field name="name">ct.nodo.activo_poste.search</field>
		<field name="model">ct.nodo.activo_poste</field>
		<field name="arch" type="xml">
			<search>
					<field name="a_poste_id" />
					<field name="state"/>
					<field name= "tarea" />
			</search>			
		</field>
	</record>

	<!-- Vista Lista -->
	<record id="ct_nodo_activo_poste_tree_view" model="ir.ui.view">
		<field name="name">ct.nodo.activo_poste.tree</field>
		<field name="model">ct.nodo.activo_poste</field>
		<field name="arch" type="xml">
			<tree>
				<field name="a_poste_id" />
				<field name="state"/>
				<field name= "tarea" />
				<field name="notes"/>
			</tree>
		</field>
	</record>	


	<!-- Vista Formulario -->
	<record id="ct_nodo_activo_posteform_view" model="ir.ui.view">
		<field name="name">ct.nodo.activo_poste.form</field>
		<field name="model">ct.nodo.activo_poste</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group string ="Activos">
						<field name="a_poste_id" />
						<field name="tipo_activo_id" />
						<field name="state"/>
						<field name= "tarea" />
						<field name="notes"/>
						<field name="m_obra_ids" invisible="1"/> 
					</group>

					<group string="Mano de obra">
						<field name="m_obra_ids" nolabel="1">
							<tree editable="buttom">
								<field name ="product_id" domain="[('tipo_activo_id', '=', parent.tipo_activo_id)]"/>
								<field name ="cantidad" />
							</tree>
						</field>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<!-- Accion del formulario -->
	<record id="ct_nodo_activo_poste_action" model="ir.actions.act_window">
		<field name="name">ACTIVOS NODO</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">ct.nodo.activo_poste</field>
		<field name="view_mode">tree,form</field>
	</record>

	<!-- menu de acceso -->
	 <menuitem id="ct_nodo_activo_poste_menu" name="Activos x nodo" parent="merp_config_menu" action="ct_nodo_activo_poste_action" />

</odoo>