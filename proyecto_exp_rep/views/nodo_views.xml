<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Vista de Busqueda -->
	<record id="ct_nodo_search_view" model="ir.ui.view">
		<field name="name">ct.nodo.search</field>
		<field name="model">ct.nodo</field>
		<field name="arch" type="xml">
			<search>
				<field name="name" />								
			</search>
		</field>

	</record>



	<!-- Vista Lista -->
	<record id="ct_nodo_tree_view" model="ir.ui.view">
		<field name="name">ct.nodo.tree</field>
		<field name="model">ct.nodo</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name" />
				<field name="gps_latitud" optional="hide" />
				<field name="gps_longitud" optional="hide"/>
				<field name="gps_altura" optional="hide"/>
				<field name="direccion" />
			    <field name="notas" optional="hide"/>   
			</tree>
		</field>
	</record>	


    <!-- Vista Formulario -->
	<record id="ct_proyecto_form_view" model="ir.ui.view">
		<field name="name">ct.nodo.form</field>
		<field name="model">ct.nodo</field>
		<field name="arch" type="xml">
			<form>
				<header>
					<button name="btn_replanteo" string="Pasar a Replanteo" type="object" />
					<field name="state" widget="statusbar" />
				</header>
				<sheet>
					<group>
							<field name="name" />
							<field name="gps_latitud" />
							<field name="gps_longitud" />
							<field name="gps_altura" />
							<field name="direccion" />
						    <field name="notas"/>
					</group>
					<group string="Activos">
						<field name="activo_poste_ids" nolabel="1">
							<tree editable="bottom">
								<field name="tipo_activo_id" />
								<field name="name"/>
								<field name="serie" />
								<field name="capacidad" />
								<field name="notas" />
								<field name="state" />
							</tree>
						</field>
					</group>
					<group string="Mano de Obra">
						<field name="mano_obra_ids" nolabel="1" domain="[('state', '=', parent.state)]">
							<tree editable="bottom">								
								<field name="nodo_id" invisible="1"/>
								<field name="state_nodo" invisible="0" />
								<field name="product_id" />
								<field name="cantidad" />
								<field name="state" />
							</tree>
						</field>
					</group>
				</sheet>
			</form>
		</field>
	</record>


    <!-- Accion del formulario -->
	<record id="ct_nodo_action" model="ir.actions.act_window">
		<field name="name">NODO</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">ct.nodo</field>
		<field name="view_mode">tree,form</field>
	</record>

	<!-- menu de acceso -->
	 <menuitem id="ct_nodo_menu" name="Nodo" parent="merp_config_menu" action="ct_nodo_action" />

</odoo>