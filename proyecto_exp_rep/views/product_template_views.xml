<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_template_only_form_view_ct" model="ir.ui.view">
        <field name="name">product.template.product.form.ct</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>        
        <field name="arch" type="xml">        	
        	<field name="uom_id" position="before">
        		<field name="name2" />
        	</field>

            <xpath expr="//page[@name='general_information']" position="after">
                 <page name="MER" string="M.E.R.">
                    <group>
                        <field name="nivel_tesion_id" widget="many2many_tags"/>
                        <field name="tipo_activo_id" />
                        <field name="tipo_obra_id" />                        
                    </group>
                    <group string="Materiales">
                        <field name="material_ids">
                            <tree editable="bottom">
                                <field name="material_id" />
                                <field name="cantidad" />
                                <field name="ubicacion" />
                                <field name="tipo" />
                            </tree>
                        </field>
                    </group>
                 </page>
            </xpath>
        </field>
    </record>

</odoo>