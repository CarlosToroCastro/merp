<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- Vista de Busqueda -->
	<record id="ct_activo_red_search_view" model="ir.ui.view">
		<field name="name">ct.activo_red.search</field>
		<field name="model">ct.activo_red</field>
		<field name="arch" type="xml">
			<search>
				<field name="name" />	
				<field name="name2" />		
				<field name="distancia " />	
			</search>
		</field>
	</record>


	<!-- Vista Formulario -->
	<record id="ct_activo_poste_tree_view" model="ir.ui.view">
		<field name="name">ct.activo_red.tree</field>
		<field name="model">ct.activo_red</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name" />	
				<field name="name2" />		
				<field name="distancia " />	
			</tree>
		</field>
	</record>



	<!-- Vista Formulario -->
	<record id="ct_activo_red_form_view" model="ir.ui.view">
		<field name="name">ct.activo_red.form</field>
		<field name="model">ct.activo_red</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="name" />	
						<field name="name2" />		
						<field name="distancia " />	
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<!-- Accion del formulario -->
	<record id="ct_activo_poste_action" model="ir.actions.act_window">
		<field name="name">RED</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">ct.activo_poste</field>
		<field name="view_mode">tree,form</field>
	</record>

<!-- menu de acceso -->
	 <menuitem id="ct_activo_poste_menu" name="Activo Electrico en Poste" parent="merp_config_menu" action="ct_activo_poste_action" />

</odoo>

