<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- Vista de Busqueda -->
	<record id="ct_tipo_equipo_electrico_search_view" model="ir.ui.view">
		<field name="name">ct.tipo_equipo_electrico.search</field>
		<field name="model">ct.tipo_equipo_electrico</field>
		<field name="arch" type="xml">
			<search>
				<field name="codigo" />
				<field name="name" />	
				<field name="notas" />							
			</search>
		</field>

	</record>

	<!-- Vista Lista -->
	<record id="ct_tipo_equipo_electrico_tree_view" model="ir.ui.view">
		<field name="name">ct.tipo_equipo_electrico.tree</field>
		<field name="model">ct.tipo_equipo_electrico</field>
		<field name="arch" type="xml">
			<tree>
				<field name="codigo" />
				<field name="name" />	
				<field name="notas" />
			</tree>
		</field>
	</record>


	<!-- Vista Formulario -->
	<record id="ct_tipo_equipo_electrico_form_view" model="ir.ui.view">
		<field name="name">ct.tipo_equipo_electrico.form</field>
		<field name="model">ct.tipo_equipo_electrico</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="codigo" />
						<field name="name" />	
						<field name="notas" />
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<!-- Accion del formulario -->
	<record id="ct_tipo_equipo_electrico_action" model="ir.actions.act_window">
		<field name="name">TIPO DE EQUIPO ELECTRICO</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">ct.tipo_equipo_electrico</field>
		<field name="view_mode">tree,form</field>
	</record>

	<!-- menu de acceso -->
	 <menuitem id="ct_tipo_equpo_electrico_menu" name="Tipo equipo electrico" parent="merp_config_menu" action="ct_tipo_equipo_electrico_action" />

</odoo>