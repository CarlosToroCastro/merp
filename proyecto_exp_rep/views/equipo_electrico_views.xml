<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<!-- Vista de Busqueda -->
	<record id="ct_equipo_electrico_search_view" model="ir.ui.view">
		<field name="name">ct.equipo_electrico.search</field>
		<field name="model">ct.equipo_electrico</field>
		<field name="arch" type="xml">
			<search>
				<field name="tipo_equipo_id" />
				<field name="codigo" />		
			</search>
		</field>
	</record>


	<!-- Vista Formulario -->
	<record id="ct_equipo_electrico_tree_view" model="ir.ui.view">
		<field name="name">ct.equipo_electrico.tree</field>
		<field name="model">ct.equipo_electrico</field>
		<field name="arch" type="xml">
			<tree>
				<field name="tipo_equipo_id" />
				<field name="codigo" />
				<field name="serie" />
				<field name="nodo" />
				<field name="capacidad" optional="show"/>
				<field name="state" />
				<field name="notas" optional="hide"/>

			</tree>
		</field>
	</record>



	<!-- Vista Formulario -->
	<record id="ct_equipo_electrico_form_view" model="ir.ui.view">
		<field name="name">ct.equipo_electrico.form</field>
		<field name="model">ct.equipo_electrico</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="tipo_equipo_id" />
						<field name="codigo" />
						<field name="serie" />
						<field name="nodo" />
						<field name="capacidad" />
						<field name="state" />
						<field name="notas" />
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<!-- Accion del formulario -->
	<record id="ct_equipo_electrico_action" model="ir.actions.act_window">
		<field name="name">EQUIPO ELECTRICO</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">ct.equipo_electrico</field>
		<field name="view_mode">tree,form</field>
	</record>

<!-- menu de acceso -->
	 <menuitem id="ct_equipo_electrico_menu" name="Equipo electrico" parent="merp_config_menu" action="ct_equipo_electrico_action" />

</odoo>

